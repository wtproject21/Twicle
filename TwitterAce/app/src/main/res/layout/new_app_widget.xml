<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="#CC0099CC"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/widgetlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/widget_tweet1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/tweet_foreground2">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="180dp"
                android:layout_height="63dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-2dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="2dp"
                android:layout_toLeftOf="@id/imageView"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:src="@android:drawable/btn_star_big_on" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/widget_tweet2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/tweet_foreground2">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="180dp"
                android:layout_height="63dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="2dp"
                android:layout_toLeftOf="@id/imageView2"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:src="@android:drawable/btn_star_big_on" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/widget_tweet3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/tweet_foreground2">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="180dp"
                android:layout_height="63dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="2dp"
                android:layout_toLeftOf="@id/imageView3"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:src="@android:drawable/btn_star_big_on" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/widget_tweet4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="180dp"
                android:layout_height="63dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="0dp"
                android:layout_toLeftOf="@id/imageView4"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:src="@android:drawable/btn_star_big_on" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/widget_ref_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新" />

            <Button
                android:id="@+id/widget_auto_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/widget_ref_btn"
                android:text="AUTO" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>